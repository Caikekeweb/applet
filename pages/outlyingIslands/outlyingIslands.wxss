.outlying-islands {
  width: 100vw;
  min-height: 100vh;
  background: #f5f5f5;
  padding: 160rpx 20rpx;
}

.cu-custom {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
}

.section {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.time {
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  margin-bottom: 39rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.title text {
  color: #999;
  font-size: 22rpx;
  vertical-align: bottom;
}

.flex-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 50rpx;
}

.flex-item text {
  color: #333;
}

.flex-item:last-child {
  margin-bottom: 0;
}

.flex-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.flex-box .box {
  width: 320rpx;
  height: 130rpx;
  background: #999999;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.flex-box .box:nth-child(1) {
  background: #BC2720;
}

.box-num {
  font-size: 40rpx;
  font-weight: 500;
  color: #FEFEFE;
}

.box-num text {
  font-size: 24rpx;
}

.box-name {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  opacity: 0.6;
}

.table {
  width: 100%;
  border-left: 1px solid #999;
  border-top: 1px solid #999;
}

.table .tr {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.table .tr .td {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  font-size: 24rpx;
  color: #666;
}

.table .tr .td:nth-child(1) {
  width: 161rpx;
}

.table .tr .td:nth-child(2) {
  width: 298rpx;
}

.table .tr .td:nth-child(3) {
  flex: 1;
}

.table .tr:first-of-type .td {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ccc;
}

.tip-box {
  padding-left: 27rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  line-height: 38rpx;
  margin-top: 40rpx;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.modal {
  width: 540rpx;
  height: 229rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}

.modal-content {
  width: 100%;
  height: 140rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}

.modal-footer {
  height: 88rpx;
  border-top: 1rpx solid #d9d9d9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.footer-btn {
  flex: 1;
  height: 100%;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

.footer-btn:nth-child(2) {
  border-left: 1rpx solid #d9d9d9;
  color: #ED3C28;
}