.top-selling-list {
  width: 100vw;
  min-height: 100vh;
  background: #f5f5f5;
}

.activity-img {
  width: 100%;
}

.cu-item {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.tab-active {
  color: #BD2820;
  position: relative;
}

.tab-active::before {
  content: "";
  width: 60rpx;
  height: 4rpx;
  background: #BD2820;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.item-box {
  margin: 20rpx;
  width: 710rpx;
  height: calc(100vh - 600rpx);
}

.item-box .goods-item {
  width: 710rpx;
  height: 270rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.goods-img {
  width: 240rpx;
  height: 240rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.flex-box {
  flex: 1;
  height: 100%;
  padding-top: 40rpx;
  position: relative;
}

.goods-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 42rpx;
  padding-right: 45rpx;
  word-break: break-all;
}

.goods-subtitle {
  font-size: 24rpx;
  padding-right: 45rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.btn-buy {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 0;
  background: #D21A1D;
  border-radius: 25rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  padding: 0;
}