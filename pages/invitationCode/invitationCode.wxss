.invitation-code {
  width: 100vw;
  min-height: 100vh;
  background: #171921;
}

.cu-bar {
  background: transparent !important;
}

.action {
  color: #fff;
}

.nav-title {
  color: #fff;
}

.board {
  width: 600rpx;
  height: 934rpx;
  margin: 75rpx auto 0;
  z-index: 9;
  position: relative;
  overflow: hidden;
}

.board::before {
  content: "";
  width: 120%;
  height: 227rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: -26px;
  z-index: -1;
}

.white-box {
  width: 100%;
  height: 878rpx;
  background-color: #fff;
  z-index: 9;
  padding-top: 28rpx;
  border-radius: 4rpx;
}

.border-box {
  margin: 0 20rpx;
  height: 864rpx;
  border: 4rpx solid #F3E0C0;
  border-bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  padding-top: 45rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.big-code {
  font-size: 64rpx;
  font-weight: bold;
  color: #C3A26D;
  margin-top: 30rpx;
}

.btn-copy {
  width: 140rpx;
  height: 46rpx;
  background: #011B36;
  border-radius: 23rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #F8F7F8;
  line-height: 46rpx;
  margin-top: 30rpx;
}

.tip {
  font-size: 22rpx;
  font-weight: 500;
  color: #999999;
  margin-top: 32rpx;
}

.line {
  width: 443rpx;
  height: 2rpx;
  background: #F2F2F2;
  margin-top: 32rpx;
}

.applet-code-box {
  width: 300rpx;
  height: 300rpx;
  margin-top: 48rpx;
  background: #f5f5f5;
}

.btn-recommend {
  width: 320rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: #C3A26D;
  border-radius: 33rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #F8F7F8;
  margin-top: 40rpx;
}