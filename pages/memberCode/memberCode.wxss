/* pages/memberCode/memberCode.wxss */
.member-code {
  width: 100vw;
  min-height: 100vh;
  background: #171921;
}

.cu-bar {
  background: unset !important;
}

.nav-title {
  color: #fff;
}

.board {
  height: 900rpx;
  background: #FFFFFF;
  border-radius: 20px;
  margin-top: 128rpx;
  margin: 128rpx 30rpx 0;
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.logo-box {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 255rpx;
  top: -70rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
}

.logo-box image {
  width: 90%;
}

.tip {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-top: 129rpx;
  text-align: center;
}

.barcode {
  width: 600rpx;
  height: 160rpx;
  background: #f5f5f5;
  margin-top: 50rpx;
}

.card-number {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.qrcode-box {
  width: 294rpx;
  height: 294rpx;
  background-color: #f5f5f5;
  margin-top: 70rpx;
}

.refresh-tip {
  margin-top: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.cuIcon-refresh {
  font-weight: 700;
}

.login-btn {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #BD2820;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  margin: 400rpx auto 0;
}