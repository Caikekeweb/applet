.integral-center {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #F6F6F6 url(https://szhy.szdutyfree.com.cn/applet/image/bg-jifen.png) no-repeat;
  background-size: contain;
  padding-bottom: 60rpx;
}

.cu-bar {
  background: unset !important;
  z-index: 99;
}

.action {
  color: #fff;
}

.nav-title {
  color: #fff;
}

.user-info {
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 100rpx;
  position: relative;
}

.avatarbox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.intergral {
  font-size: 20rpx;
  font-weight: 400;
  color: #FFFFFF;
  opacity: 0.8;
  margin-top: 12rpx;
}

.integral-rule {
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.board {
  width: 690rpx;
  min-height: 680rpx;
  margin: 70rpx 30rpx 0;
  padding: 40rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 59rpx 0px rgba(38, 35, 36, 0.14);
  border-radius: 20rpx;
}

.board-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1B1B1B;
}

.tab-box {
  margin-top: 28rpx;
}

.tab-box .tab {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666;
  padding: 12rpx 30rpx;
}

.tab-box .tab:first-of-type {
  padding-left: 0;
}

.tab-box .tab:first-of-type::before {
  left: 6rpx;
  transform: translate(0);
}

.tab-box .tab-active {
  color: #333333;
  position: relative;
}

.tab-box .tab-active::before {
  content: "";
  display: inline-block;
  width: 40rpx;
  height: 6rpx;
  background: #BC2720;
  border-radius: 3rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.scroll-box {
  width: 100%;
  max-height: calc(100vh - 696rpx);
  margin-top: 40rpx;
}

.item-box {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.item-box .item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1;
}

.item-box .item-time {
  font-size: 22rpx;
  font-weight: 500;
  color: #989898;
  margin-top: 16rpx;
}

.item-box .item-num {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.no-data {
  margin: 120rpx auto 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.no-data image {
  width: 150rpx;
}

.no-data-tip {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  margin-top: 30rpx;
  text-align: center;
  white-space: nowrap;
}