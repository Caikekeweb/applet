.edit-address {
  width: 100vw;
  min-height: 100vh;
  background: #F5F5F5;
}
.section {
  margin: 20rpx 0;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
}
.flex-row {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  box-sizing: content-box;
}
.flex-row .flex-label {
  display: inline-flex;
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.flex-row input {
  flex: 1;
  color: #333;
}

.picker-box {
  flex: 1;
  text-align: left;
}

.picker-box .picker {
  position: relative;
}

.picker-box .cuIcon-right {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #333;
}

.placeholder {
  white-space: nowrap;
  color: #B3B3B3;
}


.border-bottom {
  border-bottom: 1px solid #f2f2f2;
}

switch::after {
  display: none !important;
}
switch::before {
  display: none !important;
}

.btn-add {
  width: 690rpx;
  margin-left: 30rpx;
  height: 80rpx;
  background: #BD2820;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 60rpx;
}

.btn-detele {
  width: 690rpx;
  margin-left: 30rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-size: 32rpx;
  color: #fff;
  margin-top: 30rpx;
}