.address {
  width: 100vw;
  min-height: 100vh;
  background: #F5F5F5;
}

.address-list {
  position:absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding-top: 168rpx;
  padding-bottom: 200rpx;
}

.radio-group {
  width: 100%;
}

.data-item {
  margin: 20rpx 20rpx 0;
  background-color: #fff;
  height: 180rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  padding-left: 20rpx;
  padding-right: 32rpx;
}
radio.red-radio .wx-radio-input {
  transform: scale(0.8);
}
radio.red-radio[checked] .wx-radio-input {
  background-color: #DB2F25 !important;
  border-color: #DB2F25 !important;
}

.box-center {
  flex: 1;
  height: 100%;
  font-size: 24rpx;
  color: #333;
  padding-top: 33rpx;
  margin-left: 20rpx;
  line-height: 1;
}
.address-text {
  height: 28rpx;
  vertical-align: text-bottom;
}
.tag {
  display: inline-block;
  width: 60rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #DB2F25;
  border-radius: 14rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  vertical-align: text-bottom;
}

.detail {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.cuIcon-edit {
  font-size: 46rpx;
  color: #aaa;
}

.no-address {
  position:absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
  padding-top: 340rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.btn-add {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 60rpx;
  height: 80rpx;
  background: #BD2820;
  border-radius: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
.cuIcon-add {
  font-size: 46rpx;
  margin-right: 10rpx;
}