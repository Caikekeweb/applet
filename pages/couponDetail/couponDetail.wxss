.coupon-detail {
  width: 100%;
  min-height: 100vh;
  position: relative;
  background: #171921;
  padding-bottom: 120rpx;
}

.cu-bar {
  background: #353A47 !important;
}

.action {
  color: #fff;
}

.nav-title {
  color: #fff;
}

.board {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 40rpx 30rpx;
  padding: 30rpx 34rpx;
  position: relative;
}

.board::before {
  content: '';
  width: 16rpx;
  height: 32rpx;
  border-radius: 0 16rpx 16rpx 0;
  background: #171921;
  position: absolute;
  left: 0;
  top: 146rpx;
}

.board::after {
  content: '';
  width: 16rpx;
  height: 32rpx;
  border-radius: 16rpx 0 0 16rpx;
  background: #171921;
  position: absolute;
  right: 0;
  top: 146rpx;
}

.top-box {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: row;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #E6E6E6;
}

.top-box .image-box {
  width: 120rpx;
  height: 120rpx;
  background: #F2F2F2;
  border-radius: 8rpx;
  margin-right: 30rpx;
}

.top-box .flex-box {
  flex: 1;
}

.top-box .coupon-name {
  margin-top: 23rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.top-box .coupon-date {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.center-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 50rpx;
  padding-bottom: 60rpx;
  border-bottom: 1px solid #E6E6E6;
}

.center-box .tip {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
}

.center-box .barcode-box {
  width: 542rpx;
  height: 130rpx;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}

.center-box .code {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #181818;
  height: 24px;
  line-height: 1;
}

.center-box .qrcode {
  width: 250rpx;
  height: 250rpx;
  margin-top: 40rpx;
  background-color: #f5f5f5;
}

.bottom-box {
  margin-top: 50rpx;
}

.bottom-box .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1;
}

.bottom-box .content {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  margin-bottom: 20rpx;
}

.margin-top {
  margin-top: 50rpx;
}