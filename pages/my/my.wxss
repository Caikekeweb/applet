/* pages/my/my.wxss */
.my {
  width: 100vw;
  min-height: 100vh;
  background: #171921 url(https://szhy.szdutyfree.com.cn/applet/image/bg_info.png?202211030) no-repeat;
  background-size: 100% 540rpx;
  padding-bottom: 120rpx;
}

.cu-bar {
  background: unset !important;
}

.nav-title {
  color: #fff;
}

.info-box {
  margin-top: 28rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-self: center;
  flex-direction: row;
}

.avatar-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin-right: 30rpx;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-lock {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.8);
  border: 4rpx solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
}

.avatar-lock .cuIcon-lock {
  font-size: 40rpx;
  color: #fff;
}

.nickname {
  font-size: 32rpx;
  color: #7C4115;
  font-weight: 500;
}

.vip-grade {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #7C4115;
  opacity: 0.8;
}

.colorWhite {
  color: #FBEFDB !important;
}

.card-box {
  background-image: url(https://szhy.szdutyfree.com.cn/applet/image/card_bottom.png);
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: left 310rpx;
}

.swiper-item {
  background-size: contain;
  background-repeat: no-repeat;
  position: relative;
}

.progress {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 40rpx;
}

.color1 {
  color: '#7c3f0e'
}
.color2 {
  color: '#ae4d28'
}

.top-class {
  color: rgba(255, 255, 255, 0.4);
}

.flex-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.text1 {
  font-size: 22rpx;
  color: #7C3F0E;
}

.text2 {
  font-size: 22rpx;
  color: #8D6533;
}

.cu-progress {
  background-color: rgba(110, 77, 30, 0.2);
  height: 8rpx;
}

.cur-percent {
  background-color: rgba(255, 255, 255, 0.6);
}

.title-box {
  text-align: center;
  background: url(https://szhy.szdutyfree.com.cn/applet/image/info_service_title.png) no-repeat center center;
  background-size: 412rpx 16rpx;
  margin: 10rpx 0 50rpx;
}

.title-text {
  font-weight: 500;
  color: transparent;
  font-size: 32rpx;
  text-align: center;
  background-image: linear-gradient(-90deg, #C3A16C, #E2CDA3);
  background-clip: text;
  -webkit-background-clip: text;
}

.function-box {
  margin: 0 30rpx 30rpx;
  background: rgb(255, 255, 255, 0.05);
  padding-top: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  border-radius: 12rpx;
}

.function-item {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 60rpx;
  white-space: nowrap;
}

.function-item:nth-of-type(4n) {
  margin-right: 0;
}

.function-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #dbbd8b;
}

.iconbox {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.customer-service {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.customer-service-board {
  width: 540rpx;
  height: 708rpx;
  background: #ffffff url(https://szhy.szdutyfree.com.cn/applet/image/bg-custom.png) no-repeat;
  background-size: 100% auto;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  padding-top: 200rpx;
}

.customer-service .cuIcon-close {
  font-size: 34rpx;
  color: #333;
  position: absolute;
  right: 24rpx;
  top: 20rpx;
}

.customer-service .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 38rpx;
}

.customer-service .phone-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 38rpx;
  margin-top: 30rpx;
}

.customer-service .call-btn {
  width: 320rpx;
  height: 64rpx;
  background: #C3A26D;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 64rpx;
  margin-top: 30rpx;
}

.customer-qrcode {
  width: 180rpx;
  height: 180rpx;
  margin-top: 42rpx;
}

.code-tip {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  line-height: 38rpx;
  margin-top: 30rpx;
}