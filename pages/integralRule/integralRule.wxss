.integral-rule {
  width: 100vw;
  min-height: 100vh;
  background: #f5f5f5;
}

.cu-bar {
  background: #353A47 !important;
}

.action {
  color: #fff;
}

.nav-title {
  color: #fff;
}

.content-box {
  padding: 30rpx 20rpx;
}

.content-box .top-tip {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 38rpx;
}

.content-box .section {
  width: 100%;
  background: #FFFFFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.section-title {
  padding: 30rpx 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  border-bottom: 1px solid #e6e6e6;
}

.section-title .icon-xuhao {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  background: #BC2720;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-right: 13rpx;
}

.section-content {
  padding: 30rpx 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  line-height: 50rpx;
}

.footer-tip {
  font-size: 20rpx;
  font-weight: 500;
  color: #999999;
  line-height: 44rpx;
}