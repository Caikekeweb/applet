  justify-content: space-between;
  align-items: flex-start;
  flex-direction: row;
  position: relative;
  top: -72rpx;
}

.function-item {
  width: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 50rpx;
  white-space: nowrap;
}

.function-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #EECE99;
}

.iconbox {
  width: 50rpx;
  height: 50rpx;
