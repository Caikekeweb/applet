/* pages/home/home.wxss */
.home {
  width: 100vw;
  height: 100vh;
  background: #171921;
  color: #fff;
  overflow: auto;
  padding-bottom: 260rpx;
  position: relative;
}

.home-bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}

.cu-bar {
  background: unset;
}

.home-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  z-index: 0;
}

.user-info {
  padding: 0 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 178rpx;
  position: relative;
}

.avatarbox {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  border: 4rpx solid #fff;
}

.nickname {
  font-size: 32rpx;
  margin-left: 20rpx;
  color: #fff;
}

.nav-my-integral {
  font-size: 28rpx;
}

.cardbox {
  margin: 40rpx 50rpx 0;
  width: 650rpx;
  height: 160rpx;
  border-radius: 24rpx 24rpx 0px 0px;
  overflow: hidden;
  position: relative;
  left: -6rpx;
  z-index: 9;
}

.card {
  width: 100%;
  height: 100%;
}

.vip-interests {
  width: 710rpx;
  margin: 0 20rpx;
  border-radius: 16rpx;
  padding: 43rpx 0 60rpx;
  background-image: url(https://szhy.szdutyfree.com.cn/applet/image/bg_membership_default.png);
  background-repeat: no-repeat;
  background-size: 100% auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 113rpx;
  position: relative;
  top: -72rpx;
}

.interests-signed {
  background-image: url(https://szhy.szdutyfree.com.cn/applet/image/bg_membership.png);
}

.interests-title {
  width: 456rpx;
  text-align: center;
  font-size: 32rpx;
  color: #F0CFB2;
  margin-bottom: 43rpx;
  text-align: center;
  background: url(https://szhy.szdutyfree.com.cn/applet/image/line_title.png) no-repeat center center;
  background-size: contain;
}

.interests-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: row;
}

.interests-icon-box {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.interests-item {
  width: 25%;
  display: flex;
  justify-content: center;
