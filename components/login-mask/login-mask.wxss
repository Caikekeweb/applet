.login-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 100000;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.board {
  width: 540rpx;
  height: 229rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}

.board-content {
  width: 100%;
  height: 140rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-box {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  border-top: 1rpx solid #D9D9D9;
}

.btn {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}

.btn:last-child {
  border-left: 1rpx solid #D9D9D9;
  color: #ED3C28;
}

.login-btn {
  color: #ED3C28;
  padding: 0;
  display: inline;
  margin: 0;
  background-color: #fff;
  outline: 0;
  border: 0;
  width: 100%;
  height: 100%;
  box-sizing: content-box;
  box-shadow: none;
  border-color: unset;
}

.login-btn::after {
  display: none;
}